<h1>Редактирование транзакции</h1>
<%= simple_form_for @transaction do |f| %>
<%= render partial: "form", locals: { f: f } %>
<%= f.submit "Сохранить " %>
<%= link_to "Удалить транзакцию", transaction_path(@transaction),
method: :delete, data: { confirm: "Уверены?" } %>
<% end %>
<%= link_to 'Назад', transactions_path %>